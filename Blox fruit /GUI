-- /// 7. LOGIC B·∫¨T T·∫ÆT ///
CloseButton.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)
MinimizeButton.MouseButton1Click:Connect(function() MainFrame.Visible = false end)
OpenButton.MouseButton1Click:Connect(function()
    if MainFrame.Visible then
        MainFrame.Visible = false
    else
        MainFrame.Visible = true
        MainFrame.Size = UDim2.new(0, 550, 0, 0)
        TweenService:Create(MainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Back), {Size = UDim2.new(0, 550, 0, 280)}):Play()
    end
end)

-- /// 8. K√âO TH·∫¢ ///
local function MakeDraggable(object)
    local dragging, dragInput, dragStart, startPos
    object.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true; dragStart = input.Position; startPos = object.Position
            input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then dragging = false end end)
        end
    end)
    object.InputChanged:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then dragInput = input end end)
    UserInputService.InputChanged:Connect(function(input) if input == dragInput and dragging then local delta = input.Position - dragStart; TweenService:Create(object, TweenInfo.new(0.05), {Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)}):Play() end end)
end
MakeDraggable(MainFrame)
MakeDraggable(OpenButton)

-- /// 9. KHU V·ª∞C CH·ª®A N√öT ///
local ButtonContainer = Instance.new("ScrollingFrame")
ButtonContainer.Parent = MainFrame
ButtonContainer.Active = true
ButtonContainer.BackgroundColor3 = Theme.Background
ButtonContainer.BackgroundTransparency = 1
ButtonContainer.BorderSizePixel = 0
-- [THAY ƒê·ªîI] ƒê·∫©y container l√™n v·ªã tr√≠ Y=35 (S√°t d√≤ng k·∫ª m·ªõi)
ButtonContainer.Position = UDim2.new(0, 15, 0, 35) 
ButtonContainer.Size = UDim2.new(0, 520, 0, 235) -- TƒÉng kh√¥ng gian hi·ªÉn th·ªã n√∫t
ButtonContainer.ScrollBarThickness = 3
ButtonContainer.ScrollBarImageColor3 = Theme.YellowBorder

local UIListLayout = Instance.new("UIListLayout"); UIListLayout.Parent = ButtonContainer; UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder; UIListLayout.Padding = UDim.new(0, 8)
local UIPadding = Instance.new("UIPadding"); UIPadding.Parent = ButtonContainer; UIPadding.PaddingTop = UDim.new(0, 5); UIPadding.PaddingLeft = UDim.new(0, 5)

-- H√†m t·∫°o n√∫t
local function CreateButton(text, callback)
    local Button = Instance.new("TextButton")
    Button.Parent = ButtonContainer
    Button.BackgroundColor3 = Theme.Button
    Button.Size = UDim2.new(0, 490, 0, 40) 
    Button.Font = Enum.Font.GothamBold
    Button.Text = text
    Button.TextColor3 = Theme.Text
    Button.TextSize = 15
    
    local ButtonCorner = Instance.new("UICorner"); ButtonCorner.CornerRadius = UDim.new(0, 6); ButtonCorner.Parent = Button
    local BtnStroke = Instance.new("UIStroke"); BtnStroke.Color = Theme.YellowBorder; BtnStroke.Thickness = 1; BtnStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border; BtnStroke.Parent = Button

    Button.MouseButton1Click:Connect(function()
        TweenService:Create(Button, TweenInfo.new(0.1), {Size = UDim2.new(0, 470, 0, 35)}):Play()
        task.wait(0.1)
        TweenService:Create(Button, TweenInfo.new(0.1), {Size = UDim2.new(0, 490, 0, 40)}):Play()
        callback()
    end)
end

-- /// V√ç D·ª§ CH·ª®C NƒÇNG ///
CreateButton("Auto Farm Level üçå", function() print("Farm") end)
CreateButton("Auto Farm Chest", function() print("Chest") end)
CreateButton("Teleport Sea 3", function() print("TP") end)
CreateButton("ESP Player", function() print("ESP") end)
