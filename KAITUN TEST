-- [8] FAST ATTACK THREAD (CHẠY RIÊNG)
task.spawn(function()
    while task.wait(SETTINGS.FastAttackDelay) do
        AutoAttack() -- Gọi hàm đánh mới liên tục
    end
end)

-- [9] MAIN LOOP (LOGIC V11 CHUẨN)
RunService.Stepped:Connect(function()
    if LocalPlayer.Character then
        for _, v in pairs(LocalPlayer.Character:GetDescendants()) do
            if v:IsA("BasePart") then v.CanCollide = false end
        end
        if LocalPlayer.Character:FindFirstChild("Humanoid") then
            LocalPlayer.Character.Humanoid:ChangeState(11)
        end
    end
end)

SetStatus("Bắt đầu Farm (V14)...")

task.spawn(function()
    while task.wait() do
        pcall(function()
            local Level = LocalPlayer.Data.Level.Value
            
            -- Lấy Data Quest
            local QData = nil
            for _, d in ipairs(QUEST_DATA) do
                if Level >= d.Min and Level < d.Max then QData = d; break end
            end
            
            if not QData then 
                SetStatus("Max Level hoặc Lỗi Data")
                return 
            end

            -- Check Quest GUI
            local PlayerGui = LocalPlayer.PlayerGui.Main
            local HasQuest = false
            if PlayerGui:FindFirstChild("Quest") and PlayerGui.Quest.Visible then 
                HasQuest = true 
            end

            if not HasQuest then
                SetStatus("Đi nhận Quest: " .. QData.Mob)
                
                -- Tìm NPC
                if Workspace.NPCs:FindFirstChild(QData.Npc) then
                    FlyTo(Workspace.NPCs[QData.Npc].Head.CFrame)
                    CommF("StartQuest", QData.Quest, QData.Idx)
                    task.wait(0.5)
                else
                    SetStatus("Đang tìm NPC: " .. QData.Npc)
                    -- Fallback: Nếu không thấy NPC thì thử bay đến bãi quái để load map
                    local Spawns = Workspace._WorldOrigin.EnemySpawns:FindFirstChild(QData.Mob)
                    if Spawns then
                        FlyTo(Spawns.CFrame * CFrame.new(0, 50, 0))
                    end
                end
            else
                -- Đã có Quest -> Farm
                SetStatus("Đang farm: " .. QData.Mob)
                
                -- Tìm quái
                local Target = nil
                for _, v in ipairs(Workspace.Enemies:GetChildren()) do
                    if v.Name == QData.Mob and v:FindFirstChild("Humanoid") and v.Humanoid.Health > 0 then
                        Target = v
                        break
                    end
                end
                
                if Target then
                    -- Bay đến quái
                    FlyTo(Target.HumanoidRootPart.CFrame * CFrame.new(0, SETTINGS.FarmDistance, 0))
                    
                    -- Gom quái (Logic đơn giản của V11)
                    for _, enemy in pairs(Workspace.Enemies:GetChildren()) do
                        if enemy.Name == Target.Name and enemy ~= Target and (enemy.HumanoidRootPart.Position - Target.HumanoidRootPart.Position).Magnitude < 300 then
                            enemy.HumanoidRootPart.CFrame = Target.HumanoidRootPart.CFrame
                            enemy.HumanoidRootPart.CanCollide = false
                            enemy.Humanoid.WalkSpeed = 0
                        end
                    end
                else
                    SetStatus("Chờ quái spawn...")
                    local Spawns = Workspace._WorldOrigin.EnemySpawns:FindFirstChild(QData.Mob)
                    if Spawns then FlyTo(Spawns.CFrame * CFrame.new(0, 20, 0)) end
                end
            end
        end)
    end
end)
