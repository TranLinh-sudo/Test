local SABER = {
    Buttons = {CFrame.new(4834, 7, 719), CFrame.new(4870, 5, 743), CFrame.new(4461, 11, 1215), CFrame.new(4545, 6, 1184), CFrame.new(4520, 12, 1173)},
    Torch = CFrame.new(4882, 5, 723), DesertHouse = CFrame.new(1109, 6, 4363),
