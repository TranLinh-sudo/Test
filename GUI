TabListLayout.Padding = UDim.new(0, 10)

-- --- CONTENT ---
local ContentContainer = Instance.new("Frame")
ContentContainer.Name = "ContentContainer"
ContentContainer.Parent = MainFrame
ContentContainer.BackgroundTransparency = 1
ContentContainer.Position = UDim2.new(0.25, 10, 0, 50)
ContentContainer.Size = UDim2.new(0.75, -20, 1, -60)

-- --- HÀM TẠO TAB ---
local currentTab = nil
-- Biến lưu trữ các trang để bạn dùng sau này (ví dụ: Pages["Fam"])
local Pages = {} 

local function CreateTab(name)
	-- Page
	local Page = Instance.new("ScrollingFrame")
	Page.Name = name .. "_Page"
	Page.Parent = ContentContainer
	Page.BackgroundTransparency = 1
	Page.Size = UDim2.new(1, 0, 1, 0)
	Page.ScrollBarThickness = 4
	Page.CanvasSize = UDim2.new(0, 0, 0, 0)
	Page.AutomaticCanvasSize = Enum.AutomaticSize.Y
	Page.ScrollingDirection = Enum.ScrollingDirection.Y
	Page.Visible = false
	
	local PageLayout = Instance.new("UIListLayout")
	PageLayout.Parent = Page
	PageLayout.SortOrder = Enum.SortOrder.LayoutOrder
	PageLayout.Padding = UDim.new(0, 8)

	-- Tab Button
	local TabButton = Instance.new("TextButton")
	TabButton.Name = name .. "_Btn"
	TabButton.Parent = TabList
	TabButton.BackgroundColor3 = Colors.Background
	TabButton.BackgroundTransparency = 0
	TabButton.Size = UDim2.new(1, -10, 0, 40)
	TabButton.Font = Enum.Font.GothamBold
	TabButton.Text = name
	TabButton.TextColor3 = Color3.fromRGB(150, 150, 150)
	TabButton.TextSize = 14
	Instance.new("UICorner", TabButton).CornerRadius = UDim.new(0, 8)
	
	local TabStroke = Instance.new("UIStroke")
	TabStroke.Parent = TabButton
	TabStroke.Color = Color3.fromRGB(60, 60, 60)
	TabStroke.Thickness = 1.5
	TabStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

	TabButton.MouseButton1Click:Connect(function()
		for _, child in pairs(TabList:GetChildren()) do
			if child:IsA("TextButton") then
				child.TextColor3 = Color3.fromRGB(150, 150, 150)
				child.UIStroke.Color = Color3.fromRGB(60, 60, 60)
			end
		end
		for _, child in pairs(ContentContainer:GetChildren()) do
			if child:IsA("ScrollingFrame") then child.Visible = false end
		end
		
		TabButton.TextColor3 = Colors.Accent
		TabStroke.Color = Colors.Accent
		Page.Visible = true
	end)

	if currentTab == nil then
		currentTab = Page
		Page.Visible = true
		TabButton.TextColor3 = Colors.Accent
		TabStroke.Color = Colors.Accent
	end
	
	Pages[name] = Page -- Lưu vào bảng Pages
end

-- TẠO TAB TỪ DANH SÁCH
for _, name in ipairs(TabNames) do
	CreateTab(name)
end

-- --- HÀM TẠO NÚT CHỨC NĂNG (Dành cho bạn tự thêm code sau này) ---
local function CreateItem(tabName, text, callback)
	local page = Pages[tabName]
	if not page then return warn("Tab không tồn tại: " .. tabName) end

	local ItemFrame = Instance.new("Frame")
	ItemFrame.Parent = page
	ItemFrame.BackgroundColor3 = Colors.ItemBG
	ItemFrame.BackgroundTransparency = 0.5
	ItemFrame.Size = UDim2.new(1, -10, 0, 45) 
	
	local ItemCorner = Instance.new("UICorner")
	ItemCorner.CornerRadius = UDim.new(0, 6)
	ItemCorner.Parent = ItemFrame
	
	local ItemLabel = Instance.new("TextLabel")
	ItemLabel.Parent = ItemFrame
	ItemLabel.BackgroundTransparency = 1
	ItemLabel.Position = UDim2.new(0, 15, 0, 0)
	ItemLabel.Size = UDim2.new(0.6, 0, 1, 0)
	ItemLabel.Font = Enum.Font.GothamSemibold
	ItemLabel.Text = text
	ItemLabel.TextColor3 = Colors.Text
	ItemLabel.TextSize = 13
	ItemLabel.TextXAlignment = Enum.TextXAlignment.Left
	
	local ActionButton = Instance.new("TextButton")
	ActionButton.Parent = ItemFrame
	ActionButton.BackgroundColor3 = Colors.Accent
	ActionButton.Position = UDim2.new(1, -90, 0.5, -12)
	ActionButton.Size = UDim2.new(0, 80, 0, 24)
	ActionButton.Font = Enum.Font.GothamBold
	ActionButton.Text = "Click"
	ActionButton.TextColor3 = Color3.fromRGB(0, 0, 0)
	ActionButton.TextSize = 12
	Instance.new("UICorner", ActionButton).CornerRadius = UDim.new(0, 12)
	
	ActionButton.MouseButton1Click:Connect(function()
		pcall(callback)
	end)
end

-- --- VÍ DỤ CÁCH THÊM CHỨC NĂNG (BẠN CÓ THỂ XÓA NẾU KHÔNG CẦN) ---
-- CreateItem("Fam", "Auto Farm Level", function() print("Auto Farm") end)
-- CreateItem("Di chuyển", "Teleport Sea 3", function() print("TP Sea 3") end)

-- --- LOGIC KÉO THẢ ---
local dragging, dragInput, dragStart, startPos
local function update(input)
	local delta = input.Position - dragStart
	MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

MainFrame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = MainFrame.Position
		input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then dragging = false end end)
	end
end)

MainFrame.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		if dragging then update(input) end
	end
end)

local draggingIcon, dragStartIcon, startPosIcon
OpenButton.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		draggingIcon = true
		dragStartIcon = input.Position
		startPosIcon = OpenButton.Position
		input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then draggingIcon = false end end)
	end
end)

OpenButton.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		if draggingIcon then
			local delta = input.Position - dragStartIcon
			OpenButton.Position = UDim2.new(startPosIcon.X.Scale, startPosIcon.X.Offset + delta.X, startPosIcon.Y.Scale, startPosIcon.Y.Offset + delta.Y)
		end
	end
end)
