    Background = Color3.fromRGB(30, 30, 30), -- N·ªÅn m√†u x√°m ƒëen ƒë·∫≠m (ƒë·ªÉ nh√¨n xuy√™n th·∫•u ƒë·∫πp h∆°n ƒëen tuy·ªÅn)
    YellowBorder = Color3.fromRGB(255, 235, 59), -- M√†u v√†ng chu·ªëi cho vi·ªÅn
    Text = Color3.fromRGB(255, 255, 255), -- ƒê·ªïi m√†u ch·ªØ ch√≠nh sang Tr·∫Øng cho d·ªÖ ƒë·ªçc tr√™n n·ªÅn ƒëen
    Button = Color3.fromRGB(60, 60, 60), -- N√∫t m√†u x√°m s√°ng h∆°n n·ªÅn m·ªôt ch√∫t
    Red = Color3.fromRGB(255, 85, 85),
    Orange = Color3.fromRGB(255, 170, 0),
