-- /////////////////////////////////////////////////////////////
-- /// BANANA CAT HUB - EMERGENCY VERSION ///
-- /////////////////////////////////////////////////////////////

-- 1. BÁO HIỆU ĐẦU TIÊN (Nếu không thấy dòng này trong Console nghĩa là Executor hỏng)
print("SCRIPT STARTING...")
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "Script Status",
    Text = "Đang khởi động...",
    Duration = 5
})

-- 2. DỌN DẸP GUI CŨ
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- Xóa hết các GUI trùng tên
if PlayerGui:FindFirstChild("BananaEmergency") then
    PlayerGui.BananaEmergency:Destroy()
end

-- 3. TẠO GUI TRỰC TIẾP
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "BananaEmergency"
ScreenGui.Parent = PlayerGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.ResetOnSpawn = false
ScreenGui.IgnoreGuiInset = true -- Đảm bảo không bị che bởi thanh menu Roblox

-- 4. TẠO NÚT MỞ (MÀU ĐỎ CHO DỄ THẤY)
local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Parent = ScreenGui
ToggleBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- Màu ĐỎ
ToggleBtn.Position = UDim2.new(0.5, -50, 0.1, 0) -- Nằm giữa, phía trên
ToggleBtn.Size = UDim2.new(0, 100, 0, 50)
ToggleBtn.Text = "OPEN MENU"
ToggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleBtn.TextSize = 20
ToggleBtn.Font = Enum.Font.GothamBold

-- Bo tròn nút
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = ToggleBtn

-- 5. TẠO KHUNG MENU CHÍNH
local MainFrame = Instance.new("Frame")
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -100) -- Giữa màn hình
MainFrame.Size = UDim2.new(0, 300, 0, 200)
MainFrame.Visible = true -- Mặc định hiện luôn

-- Tiêu đề
local Title = Instance.new("TextLabel")
Title.Parent = MainFrame
Title.BackgroundColor3 = Color3.fromRGB(255, 235, 59) -- Vàng
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = "BANANA CAT HUB (TEST)"
Title.TextColor3 = Color3.fromRGB(0, 0, 0)
Title.TextSize = 18

-- 6. LOGIC ĐƠN GIẢN NHẤT
ToggleBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
end)

-- Nút Tắt Script
local CloseBtn = Instance.new("TextButton")
CloseBtn.Parent = MainFrame
CloseBtn.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
CloseBtn.Position = UDim2.new(0.1, 0, 0.8, 0)
CloseBtn.Size = UDim2.new(0.8, 0, 0, 30)
CloseBtn.Text = "TẮT SCRIPT (DESTROY)"
CloseBtn.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- 7. KÉO THẢ NÚT (DRAG)
local UserInputService = game:GetService("UserInputService")
local dragging, dragInput, dragStart, startPos
local function update(input)
    local delta = input.Position - dragStart
    ToggleBtn.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end
ToggleBtn.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = ToggleBtn.Position
        input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then dragging = false end end)
    end
end)
ToggleBtn.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then dragInput = input end
end)
UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then update(input) end
end)

print("SCRIPT LOADED SUCCESS!")
