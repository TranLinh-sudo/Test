-- Dịch vụ cần thiết
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

-- Hàm bảo vệ UI
local function getParent()
	local success, result = pcall(function()
		return CoreGui
	end)
	if success then
		return result
	else
		return Players.LocalPlayer:WaitForChild("PlayerGui")
	end
end

-- --- CẤU HÌNH MÀU SẮC ---
local Colors = {
	Background = Color3.fromRGB(20, 20, 20),
	Sidebar = Color3.fromRGB(15, 15, 15),
	Text = Color3.fromRGB(255, 255, 255),
	Accent = Color3.fromRGB(255, 215, 0), -- Màu vàng (Gold)
	Close = Color3.fromRGB(200, 50, 50),
}

-- --- TẠO GUI CHÍNH ---
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "BananaCatHub_14Tabs"
ScreenGui.Parent = getParent()
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- 1. ICON TOGGLE (Luôn hiện)
local OpenButton = Instance.new("ImageButton")
OpenButton.Name = "OpenButton"
OpenButton.Parent = ScreenGui
OpenButton.BackgroundColor3 = Colors.Background
OpenButton.Position = UDim2.new(0.02, 0, 0.15, 0)
OpenButton.Size = UDim2.new(0, 50, 0, 50)
OpenButton.Visible = true
OpenButton.Image = "rbxassetid://13693489228" -- Ảnh Banana Cat
OpenButton.ZIndex = 10

local OpenBtnCorner = Instance.new("UICorner")
OpenBtnCorner.CornerRadius = UDim.new(1, 0)
OpenBtnCorner.Parent = OpenButton

local OpenStroke = Instance.new("UIStroke")
OpenStroke.Parent = OpenButton
OpenStroke.Color = Colors.Accent
OpenStroke.Thickness = 2

-- 2. MAIN FRAME (75% Màn hình)
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Colors.Background
MainFrame.BackgroundTransparency = 0.1
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5) 
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.Size = UDim2.new(0.75, 0, 0.75, 0) 
MainFrame.BorderSizePixel = 0
MainFrame.ClipsDescendants = true 

local MainCorner = Instance.new("UICorner")
MainCorner.CornerRadius = UDim.new(0, 10)
MainCorner.Parent = MainFrame

-- Logic Bật/Tắt từ Icon
OpenButton.MouseButton1Click:Connect(function()
	MainFrame.Visible = not MainFrame.Visible
end)

-- --- TOP BAR ---
local TopBar = Instance.new("Frame")
TopBar.Parent = MainFrame
TopBar.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
TopBar.BackgroundTransparency = 1
TopBar.Size = UDim2.new(1, 0, 0, 40)

local HeaderTitle = Instance.new("TextLabel")
HeaderTitle.Parent = TopBar
HeaderTitle.BackgroundTransparency = 1
HeaderTitle.Position = UDim2.new(0, 15, 0, 0)
HeaderTitle.Size = UDim2.new(0.6, 0, 1, 0)
HeaderTitle.Font = Enum.Font.GothamBold
HeaderTitle.Text = "Banana Cat Hub - 14 Tabs Edition"
HeaderTitle.TextColor3 = Colors.Accent
HeaderTitle.TextSize = 18
HeaderTitle.TextXAlignment = Enum.TextXAlignment.Left

-- Nút X và -
local CloseBtn = Instance.new("TextButton")
CloseBtn.Parent = TopBar
CloseBtn.BackgroundColor3 = Colors.Close
CloseBtn.Position = UDim2.new(1, -35, 0.5, -12)
CloseBtn.Size = UDim2.new(0, 24, 0, 24)
CloseBtn.Font = Enum.Font.GothamBold
CloseBtn.Text = "X"
CloseBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseBtn.TextSize = 14
Instance.new("UICorner", CloseBtn).CornerRadius = UDim.new(0, 6)

local MinimizeBtn = Instance.new("TextButton")
MinimizeBtn.Parent = TopBar
MinimizeBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
MinimizeBtn.Position = UDim2.new(1, -70, 0.5, -12)
MinimizeBtn.Size = UDim2.new(0, 24, 0, 24)
MinimizeBtn.Font = Enum.Font.GothamBold
MinimizeBtn.Text = "-"
MinimizeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
MinimizeBtn.TextSize = 14
Instance.new("UICorner", MinimizeBtn).CornerRadius = UDim.new(0, 6)

CloseBtn.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)
MinimizeBtn.MouseButton1Click:Connect(function() MainFrame.Visible = false end)

-- --- SIDEBAR & CONTENT ---
local Sidebar = Instance.new("Frame")
Sidebar.Name = "Sidebar"
Sidebar.Parent = MainFrame
Sidebar.BackgroundColor3 = Colors.Sidebar
Sidebar.BackgroundTransparency = 0.5
Sidebar.Position = UDim2.new(0, 0, 0, 40)
Sidebar.Size = UDim2.new(0.25, 0, 1, -40)
Sidebar.BorderSizePixel = 0

local ContentContainer = Instance.new("Frame")
ContentContainer.Name = "ContentContainer"
ContentContainer.Parent = MainFrame
ContentContainer.BackgroundTransparency = 1
ContentContainer.Position = UDim2.new(0.25, 10, 0, 50)
ContentContainer.Size = UDim2.new(0.75, -20, 1, -60)

local TabList = Instance.new("ScrollingFrame")
TabList.Name = "TabList"
TabList.Parent = Sidebar
TabList.BackgroundTransparency = 1
TabList.Position = UDim2.new(0, 10, 0, 10) -- Padding trái phải 10 để thấy viền
TabList.Size = UDim2.new(1, -20, 1, -10)
TabList.ScrollBarThickness = 2
TabList.CanvasSize = UDim2.new(0, 0, 2, 0) -- Tăng chiều dài để lướt đủ 14 tab

local TabListLayout = Instance.new("UIListLayout")
TabListLayout.Parent = TabList
TabListLayout.SortOrder = Enum.SortOrder.LayoutOrder
TabListLayout.Padding = UDim.new(0, 10) -- Khoảng cách giữa các tab

-- --- HÀM TẠO TAB (CÓ VIỀN VÀNG) ---
local currentTab = nil

local function CreateTab(tabName, tabNumber)
	-- 1. Tạo Page (Nội dung) rỗng
	local Page = Instance.new("ScrollingFrame")
	Page.Name = "Page_" .. tabNumber
	Page.Parent = ContentContainer
	Page.BackgroundTransparency = 1
	Page.Size = UDim2.new(1, 0, 1, 0)
	Page.ScrollBarThickness = 4
	Page.Visible = false -- Mặc định ẩn
	
	local PageLayout = Instance.new("UIListLayout")
	PageLayout.Parent = Page
	PageLayout.SortOrder = Enum.SortOrder.LayoutOrder
	PageLayout.Padding = UDim.new(0, 8)

	-- 2. Tạo Nút Tab (Sidebar)
	local TabButton = Instance.new("TextButton")
	TabButton.Name = "TabBtn_" .. tabNumber
	TabButton.Parent = TabList
	TabButton.BackgroundColor3 = Colors.Background
	TabButton.BackgroundTransparency = 0 -- Có nền để nổi viền lên
	TabButton.Size = UDim2.new(1, 0, 0, 40)
	TabButton.Font = Enum.Font.GothamBold
	TabButton.Text = tabName -- Ví dụ: "Tab 1"
	TabButton.TextColor3 = Color3.fromRGB(150, 150, 150) -- Màu xám khi chưa chọn
	TabButton.TextSize = 14

	-- Tạo góc bo tròn
	local TabCorner = Instance.new("UICorner")
	TabCorner.CornerRadius = UDim.new(0, 8)
	TabCorner.Parent = TabButton

	-- TẠO VIỀN VÀNG (UIStroke)
	local TabStroke = Instance.new("UIStroke")
	TabStroke.Parent = TabButton
	TabStroke.Color = Colors.Accent -- Màu vàng
	TabStroke.Thickness = 1.5 -- Độ dày viền
	TabStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

	-- Xử lý click
	TabButton.MouseButton1Click:Connect(function()
		-- Reset màu tất cả nút
		for _, child in pairs(TabList:GetChildren()) do
			if child:IsA("TextButton") then
				child.TextColor3 = Color3.fromRGB(150, 150, 150)
				-- Có thể đổi màu viền nếu muốn (vd: viền xám khi không chọn)
				child.UIStroke.Color = Color3.fromRGB(60, 60, 60) 
			end
		end
		-- Ẩn tất cả trang
		for _, child in pairs(ContentContainer:GetChildren()) do
			if child:IsA("ScrollingFrame") then child.Visible = false end
		end
		
		-- Active nút hiện tại
		TabButton.TextColor3 = Colors.Accent
		TabStroke.Color = Colors.Accent -- Viền vàng sáng lên
		Page.Visible = true
	end)

	-- Mặc định set viền xám cho các tab chưa chọn để đỡ rối mắt
	TabStroke.Color = Color3.fromRGB(60, 60, 60)

	-- Nếu là Tab 1 thì active ngay từ đầu
	if currentTab == nil then
		currentTab = Page
		Page.Visible = true
		TabButton.TextColor3 = Colors.Accent
		TabStroke.Color = Colors.Accent
	end

	return Page
end

-- --- VÒNG LẶP TẠO 14 TAB ---
for i = 1, 14 do
	CreateTab("Tab " .. i, i)
end

-- --- KÉO THẢ (DRAG) ---
local dragging, dragInput, dragStart, startPos
local function update(input)
	local delta = input.Position - dragStart
	MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

MainFrame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = MainFrame.Position
		input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then dragging = false end end)
	end
end)

MainFrame.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		if dragging then update(input) end
	end
end)

-- Kéo thả Icon
local draggingIcon, dragStartIcon, startPosIcon
OpenButton.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		draggingIcon = true
		dragStartIcon = input.Position
		startPosIcon = OpenButton.Position
		input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then draggingIcon = false end end)
	end
end)

OpenButton.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		if draggingIcon then
			local delta = input.Position - dragStartIcon
			OpenButton.Position = UDim2.new(startPosIcon.X.Scale, startPosIcon.X.Offset + delta.X, startPosIcon.Y.Scale, startPosIcon.Y.Offset + delta.Y)
		end
	end
end)
